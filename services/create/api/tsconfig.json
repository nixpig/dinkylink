{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
